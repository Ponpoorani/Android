<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#ffbfbfff">

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="@dimen/box_size"
        android:id="@+id/editText"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:hint="Enter Value"
        android:gravity="right"
        android:ellipsize="end"
        android:paddingTop="20dp"/>

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="1"
        android:id="@+id/one"
        android:layout_below="@+id/editText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="45dp"
        android:layout_marginRight="25dp"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="2"
        android:id="@+id/two"
        android:layout_marginRight="25dp"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold"
        android:layout_alignTop="@+id/one"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="3"
        android:id="@+id/three"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold"
        android:layout_above="@+id/four"
        android:layout_alignLeft="@+id/nine"
        android:layout_alignStart="@+id/nine" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="+"
        android:id="@+id/plus"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold"
        android:layout_above="@+id/four"
        android:layout_alignRight="@+id/editText"
        android:layout_alignEnd="@+id/editText" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="4"
        android:id="@+id/four"
        android:layout_marginTop="35dp"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold"
        android:layout_below="@+id/one"
        android:layout_alignLeft="@+id/one"
        android:layout_alignStart="@+id/one" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="5"
        android:id="@+id/five"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/four"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="6"
        android:id="@+id/six"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/five"
        android:layout_alignLeft="@+id/three"
        android:layout_alignStart="@+id/three" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="-"
        android:id="@+id/minus"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/six"
        android:layout_alignLeft="@+id/plus"
        android:layout_alignStart="@+id/plus" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="7"
        android:id="@+id/seven"
        android:layout_marginTop="44dp"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold"
        android:layout_below="@+id/four"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="8"
        android:id="@+id/eight"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/seven"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="9"
        android:id="@+id/nine"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/eight"
        android:layout_toRightOf="@+id/two"
        android:layout_toEndOf="@+id/two" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="*"
        android:id="@+id/multiply"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold"
        android:layout_alignBottom="@+id/nine"
        android:layout_alignLeft="@+id/minus"
        android:layout_alignStart="@+id/minus" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="C"
        android:id="@+id/clr"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/seven"
        android:layout_alignStart="@+id/seven" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="0"
        android:id="@+id/clr"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/one"
        android:layout_toEndOf="@+id/one" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="="
        android:id="@+id/equal"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold"
        android:layout_alignTop="@+id/clr"
        android:layout_alignLeft="@+id/nine"
        android:layout_alignStart="@+id/nine" />

    <Button
        android:layout_width="@dimen/box_size"
        android:layout_height="@dimen/box_size"
        android:text="/"
        android:id="@+id/div"
        android:background="#ff46a0ff"
        android:textColor="#fffefffd"
        android:textStyle="bold"
        android:layout_alignTop="@+id/equal"
        android:layout_alignLeft="@+id/multiply"
        android:layout_alignStart="@+id/multiply" />
</RelativeLayout>
